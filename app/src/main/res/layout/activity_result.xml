<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/r"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/r_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游戏结果"
        android:textSize="35sp"
        android:layout_marginTop="20dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/orange"
        android:background="@drawable/llbox"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/r_linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@id/r_textview"
        android:orientation="vertical">

        <ListView
            android:id="@+id/r_listview"
            android:choiceMode="singleChoice"
            android:background="#99161421"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:divider="@null"
            android:textSize="35sp"
            android:scrollbars="vertical" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/r_linearlayout1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_r_return"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:background="@drawable/button_drawable"
            android:text="返回主菜单"
            android:textColor="@color/white"
            android:textSize="18dp" />
        <Button
            android:id="@+id/bt_r_again"
            android:layout_gravity="right"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_drawable"
            android:text="再玩一次"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </FrameLayout>

</RelativeLayout>